                <thead>
                <tr>
                    <th scope="col">Location</th>
                </tr>
                </thead>
                <tbody>
                {% for adresse in adresses %}
                    <tr>
                        <td id="{{ adresse.id }}">{{ adresse.location }}</td>
                    </tr>
                {% endfor %}
